// Display the menu and read the number of the selected item
int Menu( void ) {
  int c, k = 0;
  int i = 0, Curr = 0; //Setting the counter
  c = 0;
  keypad (stdscr, TRUE);
 // while ((c < 48 || c > 55) && c != 27) {
 //   printf("╒══════════════════════╕\n"
 //          "│    0 : Exit          │\n"
 //          "╞══════════════════════╡\n"
 //          "│    1 : Add           │\n"
 //          "╞══════════════════════╡\n"
 //          "│    2 : Save in file  │\n"
 //          "╞══════════════════════╡\n"
 //          "│    3 : Download      │\n"
 //          "╞══════════════════════╡\n"
 //          "│    4 : Print         │\n"
 //          "╞══════════════════════╡\n"
 //          "│    5 : Sort          │\n"
 //          "╞══════════════════════╡\n"
 //          "│    6 : Delete        │\n"
 //          "╞══════════════════════╡\n"
 //          "│    7 : Change        │\n"
 //          "╘══════════════════════╛\n");
    do {
	    if (Curr == 0) {
              printw (
              "╒═════════════════════════════╕\n"
              "│    0 : Exit          <<<    │\n"
              "╞═════════════════════════════╡\n");
            } else {
              printw (
              "╒═════════════════════════════╕\n"
              "│    0 : Exit                 │\n"
              "╞═════════════════════════════╡\n");
	    }
	    if (Curr == 1) {
              printw (
              "│    1 : Add           <<<    │\n"
              "╞═════════════════════════════╡\n");
            } else {
              printw (
              "│    1 : Add                  │\n"
              "╞═════════════════════════════╡\n");
            }
	    if (Curr == 2) {
              printw (
              "│    2 : Save in file  <<<    │\n"
              "╞═════════════════════════════╡\n");
            } else {
              printw (
              "│    2 : Save in file         │\n"
              "╞═════════════════════════════╡\n");
            }
            if (Curr == 3) {
              printw (
              "│    3 : Download      <<<    │\n"
              "╞═════════════════════════════╡\n");
            } else {
              printw (
              "│    3 : Download             │\n"
              "╞═════════════════════════════╡\n");
            }
	    if (Curr == 4) {
              printw (
              "│    4 : Save in file  <<<    │\n"
              "╞═════════════════════════════╡\n");
            } else {
              printw (
              "│    4 : Save in file         │\n"
              "╞═════════════════════════════╡\n");
            }
	    if (Curr == 5) {
              printw (
              "│    5 : Sort          <<<    │\n"
              "╞═════════════════════════════╡\n");
            } else {
              printw (
              "│    5 : Sort                 │\n"
              "╞═════════════════════════════╡\n");
            }
	    if (Curr == 6) {
              printw (
              "│    6 : Delete        <<<    │\n"
              "╞═════════════════════════════╡\n");
            } else {
              printw (
              "│    6 : Delete               │\n"
              "╞═════════════════════════════╡\n");
            }
	    if (Curr == 7) {
              printw (
              "│    7 : Change        <<<    │\n"
              "╞═════════════════════════════╡\n");
            } else {
              printw (
              "│    7 : Change               │\n"
              "╞═════════════════════════════╡\n");
            }
	    printw("\n");
    k = getch();
    //switch (k) {
    //	    case KEY_DOWN: {
    // 	    if (Curr == 6) Curr = 0;
    // 	    else Curr++;
    //        }
    //        clear();
    // 	    break;
    //	    case KEY_UP: {
    //	    if (Curr == 0) Curr = 6;
    //	    else Curr--;
    //        }
    //        clear();
    //	    break;
    //}
    if (k == KEY_DOWN) {
	    if (Curr == 6) Curr = 0;
            else Curr++;
            }
            clear();
    if (k == KEY_UP) {
	    if (Curr == 0) Curr = 8;
            else Curr--;
            }
            clear();

    } while (k != 10);
    return Curr;
} /* End of 'Menu' function */

int MenuSortChoice (void) {
    int p = 0, k = 0;
    while ((p < 49 || p > 50) && p != 27) {
        printf ("╔══════════════════════════════════╗\n");
        printf ("║      Select the sort type:       ║\n");
        printf ("╠════════════════╦╦════════════════╣\n");
        printf ("║  1 - Decrease  ║║  2 - Increase  ║\n");
        printf ("╚════════════════╩╩════════════════╝\n");
        k = getchar();
	switch (k) {
		case KEY_LEFT:
			p = 1;
			break;
		case KEY_RIGHT:
			p = 2;
			break;
	}
        //while (k != '\n') {
        //  p = k;
        //  putchar (k);
        //  k = getchar();
        //}
        //putchar ('\n');
        //fflush(stdin);
    }
    return p;
}

