// The function of the main menu
int main( void )
{
  int Selection;

 while ((Selection = Menu()) != 48 && Selection != 27)
    switch (Selection) {
        case 1:
          Add();
          break;
        //case 2:
        //  Print();
        //  Save();
        //  break;
        //case 3:
        //  Print();
        //  Load();
        //  break;
        case 4:
          Print();
          break;
        case 5:
          MenuSortChoice();
          break;
        case 6:
          Del();
          break;
        case 7:
          Change();
          Print();
          break;
    }
} // End the function of the main menu

void TypeSort (void) {
    int Selection;
    
    while ((Selection = MenuSortChoice()) != 48 && Selection != 27)
        switch (Selection) {
            case 49:
            MenuSort();
            break;
            case 50:
            MenuSortD();
            break;
        }
}

// Sorting menu function
void mainsort( void )
{
  int Selection;

  while ((Selection = MenuSort()) != 48 && Selection != 27)
    switch (Selection)
    {
    case 49:
      main();
      break;
    case 50:
      SortNumberRoute();
      break;
    case 51:
      SortBusFleetNumber();
      break;
    case 52:
      SortStartTime();
      break;
    case 53:
      SortEndTime();
      break;
    case 54:
      SortRouteKM();
      break;
    }
} //End sorting menu function

void mainsortD (void) {
    int Selection;
    while ((Selection = MenuSortD()) != 48 && Selection != 27)
