                  printw ("Overflow\n");
                  dh = 0;
                  ch = 0;
                }
            }
        }
	Bus[Num].numberroute = ch;
	printw ("Changed on %d\n", Bus[Num].numberroute);
	printw ("Num = %d\n", Num);
	getchar();
	getchar();	
        break;
        case 2:
	printw ("╔═════════════════════════╗\n");
