//Function change information
void Change (void) {
    initscr();
    noecho();
    keypad(stdscr, true);
    int a, Curr = 1, dh = 0, ch = 0;
    int tapok = 0, Num = 0; //Setting the counters
    Print();
    printw ("╔════════════════════════════════════════════════════════════╗\n");
    printw ("║                                                            ║\n");
    printw ("║    Enter the line number where you want to make changes    ║\n");
    printw ("║                                                            ║\n");
    printw ("╚════════════════════════════════════════════════════════════╝\n");
    a = getch();
    while (a != '\n') {
      a = a - 48;
      Num = Num * 10 + a;
      //putchar (a);
      a = getch();
    }
    Num--;
    getchar();
    //putchar ('\n');
    do {
            printw ("╔════════════════════════════════════════════════════════════╗\n");
            printw ("║         Enter the desired character to change:             ║\n");
            printw ("╠════════════════════════════════════════════════════════════╣\n");
