            if (Curr == 5) Curr = 1;
            else Curr++;
            }
            clear();
    if (tapok == KEY_UP) {
            if (Curr == 1) Curr = 5;
            else Curr--;
            }
            clear();
    } while (tapok != 10);
    switch (Curr) {
        case 1:
	printw ("╔══════════════════════╗\n");
